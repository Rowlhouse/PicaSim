<!--
Electric glider
-->

<Misc
  launchOffsetX="2.0"
  launchOffsetY="0.0"
  launchOffsetZ="0.2"
  launchSpeed="6.0"
/>
<Physics>
  <Dynamics
    wingSpan="1.5"
    wingChord="0.25"
    CMRollFromY="0.0"
    friction="0.5"
    frictionScaleX="1"
    frictionScaleY="2"
    frictionScaleZ="2"
    />

  <Aerodynamics>
    <!-- Positions are in the centre of the chord and height, but at one end of the span (so extents.y may be negative). 
    Note that X is forward, Y is left and Z is up-->

    <Wing
      name="FuselageVert"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numPieces="3"
      numSections="1"
      mass="0.0"

      positionX="-0.2"
      positionY="-0.0"
      positionZ="-0.02"
      roll="90"
      extentsX="1.0"
      extentsY="0.05"
      extentsZ="0.01"
      
      wingAspectRatio="0.5"
    />

    <Wing
      name="FuselageHor"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numPieces="3"
      numSections="1"
      mass="0.0"

      positionX="-0.2"
      positionY="-0.025"
      positionZ="-0.0"
      extentsX="1.0"
      extentsY="0.05"
      extentsZ="0.01"
      
      wingAspectRatio="0.5"
    />

    <Wing
      name="MidLeft"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/RG15"
      numSections="1"
      mass="0.075"

      positionX="0.0"
      positionY="0.0"
      positionZ="0.0"
      rotationX="3.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.24"
      extentsY="0.3"
      extentsZ="0.01"
      wingAspectRatio="8.0"
      groundEffect="1"
    />

    <Wing
      name="MidRight"
      copy="MidLeft"
      mirror="1"
    />

    <Wing 
      name="Left"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/RG15"
      numSections="3"
      mass="0.15"

      positionX="0.02"
      positionY="0.3"
      positionZ="0.02"
      rotationX="13.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.20"
      extentsY="0.72"
      extentsZ="0.01"
      wingAspectRatio="8.0"
      groundEffect="1"
      
      CLPerDegree="0.022"
      CDPerDegree="0.02"
      CMPerDegree="-0.01"
      flapFraction="0.32"
      degreesPerControl="16"
      
      controlPerChannel0="1"
      controlPerChannel6="0.2"
    />

    <Wing
      name="Right"
      copy="Left"
      mirror="1"
    />

    <Wing
      name="Tail"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.035"

      positionX="-0.75"
      positionY="-0.25"
      positionZ="0.01"
      rotationX="0.0"
      rotationY="0.5"
      rotationZ="0.0"
      extentsX="0.13"
      extentsY="0.5"
      extentsZ="0.01"
      wingAspectRatio="3.0"
      groundEffect="1"

      washFromWingName1="Left"
      washFromWingName2="Right"
      washFromWingFraction1="0.5"
      washFromWingFraction2="0.5"
      
      CLPerDegree="0.022"
      CDPerDegree="0.03"
      CMPerDegree="-0.01"
      flapFraction="0.4"
      degreesPerControl="15"
      
      controlPerChannel1="1"
      controlPerChannel6="0.05"
    />

    <Wing
      name="Fin"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.03"

      positionX="-0.73"
      positionY="0.0"
      positionZ="0.0"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.12"
      extentsY="0.2"
      extentsZ="0.01"
      wingAspectRatio="2.0"
      
      CLPerDegree="0.022"
      CDPerDegree="0.03"
      CMPerDegree="-0.01"
      flapFraction="0.6"
      degreesPerControl="15"
      
      controlPerChannel2="-1"
    />

    <PropellerEngine
      name="Engine"
      positionX="0.4"
      positionY="0"
      positionZ="-0.0"
      rotationY="6.0"
      rotationZ="-0.4"
      
      numBlades = "2"
      radius = "0.12"
      pitch = "0.18"
      bladeChord = "0.013"
      CL0 = "0.5"
      CLPerDegree = "0.1"
      CD0="0.02"
      CDInducedMultiplier="1.0"
      stallAngle="15"
      inertia = "0.000013"
      maxTorque = "0.05"
      maxRPM = "12000.0"
      minRPM = "0.0"
      frictionTorque ="0.05"
      washRotationFraction ="0.0"
      propDiskAreaScale = "0.35"

      controlExp="0.5"
      controlRate="6"
      controlPerChannel3="1"

      audioFile="SystemData/Audio/NewMotor44100Mono.raw"
      audioStereo="0"
      audioSampleRate="44100"
      audioRadius="0.2"
      audioMinVolume="0.0"
      audioMaxVolume="2"
      audioMinFreqScale="0.25"
      audioMaxFreqScale="0.6"

      colourX="0.5"
      colourY="0.5"
      colourZ="0.5"
      colourW="0.1"
    />

  </Aerodynamics>

  <Geometry>
    <!-- Additional geometry on top of the wing components etc -->
    <Shape
      type="box"
      mass="0.0"
      positionX="-0.2"
      positionY="0.0"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="1.2"
      extentsY="0.03"
      extentsZ="0.03"
      render="true"
    />

    <Shape
      type="box"
      mass="0.15"
      positionX="0.4"
      positionY="0.0"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.05"
      extentsY="0.05"
      extentsZ="0.05"
      render="false"
      collide="false"
    />
  </Geometry>

  <CrashShapes>
    <CrashShape
      type="box"
      name="Prop"
      engineName="Engine"
      crashPropSpeed="30"
      positionX="0.4"
      positionY="0"
      positionZ="-0.0"
      rotationX="45"
      extentsX="0.01"
      extentsY="0.15"
      extentsZ="0.15"
      />
  </CrashShapes>

</Physics>

<Graphics>
  <Model name="Standard" model3DS="SystemData/Aeroplanes/Trainer/Trainer.ac" modelScale="0.0254" cullBackFace="true" unsetColourR="81" unsetColourG="81" unsetColourB="204"/>

  <ControlSurface
    name="Elevator"
    source="Tail"
    angleMultiplier="1"
    hingePoint1X="-9.843"
    hingePoint1Y="0.594"
    hingePoint1Z="29.826"
    hingePoint2X="9.843"
    hingePoint2Y="0.594"
    hingePoint2Z="29.826"
  />

  <ControlSurface
    name="Rudder"
    source="Fin"
    angleMultiplier="-1"
    hingePoint1X="0.00"
    hingePoint1Y="1.018"
    hingePoint1Z="30.271"
    hingePoint2X="0.0"
    hingePoint2Y="6.415"
    hingePoint2Z="30.586"
  />

  <ControlSurface
    name="AileronLeft"
    source="Left"
    angleMultiplier="-1"
    hingePoint1X="-14.222"
    hingePoint1Y="1.594"
    hingePoint1Z="1.273"
    hingePoint2X="-36.131"
    hingePoint2Y="6.466"
    hingePoint2Z="0"
  />

  <ControlSurface
    name="AileronRight"
    source="Right"
    angleMultiplier="1"
    hingePoint1X="14.222"
    hingePoint1Y="1.594"
    hingePoint1Z="1.273"
    hingePoint2X="36.131"
    hingePoint2Y="6.466"
    hingePoint2Z="0"
  />
</Graphics>

<Audio>
  <AirFlow
    file="SystemData/Audio/Glider22050Stereo.raw"
    sampleRate="22050"
    mMinSpeedRelAir ="5"
    mFreqScalePerSpeed=".125"
    mMinFreqScale=".9"
    mMaxFreqScale="1.2"
    mVolScalePerSpeed=".05"
    mVolPow="2"
    mMaxVolume=".3"
  />

  <AirFlow
    file="SystemData/Audio/GliderWhistle22050Stereo.raw"
    sampleRate="22050"
    mMinSpeedRelAir ="15"
    mFreqScalePerSpeed=".1"
    mMinFreqScale=".9"
    mMaxFreqScale="1.2"
    mVolScalePerSpeed=".05"
    mVolPow="2"
    mMaxVolume="1"
  />
</Audio>



