<!--
MartinWing
-->

<Misc
  launchOffsetX="2.0"
  launchOffsetY="0.5"
  launchOffsetZ="0.2"
  launchSpeed="10"
/>
<Physics>
  <Dynamics
    wingSpan="1.21"
    wingChord="0.39"
    CMRollFromY="0.0"
    friction="0.5"
    frictionScaleX="1"
    frictionScaleY="2"
    frictionScaleZ="2"
    />

  <Aerodynamics>
    <!-- Positions are in the centre of the chord and height, but at one end of the span (so extents.y may be negative). 
    Note that X is forward, Y is left and Z is up-->

    <Wing 
      name="Mid"
      aerofoil="SystemData/Aeroplanes/MartinWing/MartinAerofoil"
      numSections="2"
      mass="0.05"

      positionX="-0.03"
      positionY="-0.1"
      positionZ="0.00"
      extentsX="0.29"
      extentsY="0.2"
      extentsZ="0.01"
      wingAspectRatio="8.0"
      groundEffect="1"

    />

    <Wing 
      name="Left1"
      aerofoil="SystemData/Aeroplanes/MartinWing/MartinAerofoil"
      numSections="3"
      mass="0.05"

      positionX="-0.03"
      positionY="0.1"
      positionZ="0.00"
      yaw="10"
      extentsX="0.27"
      extentsY="0.22"
      extentsZ="0.01"
      wingAspectRatio="8.0"
      groundEffect="1"

    />

    <Wing 
      name="Left2"
      aerofoil="SystemData/Aeroplanes/MartinWing/MartinAerofoil"
      numSections="3"
      mass="0.015"

      positionX="-0.09"
      positionY="0.3"
      positionZ="0.00"
      yaw="15"
      extentsX="0.23"
      extentsY="0.34"
      extentsZ="0.01"
      wingAspectRatio="8.0"
      groundEffect="1"

      CLPerDegree="0.01"
      CDPerDegree="0.03"
      CMPerDegree="-0.002"
      flapFraction="0.25"
      degreesPerControl="25"
      controlRate="10"
      controlClamp="1"
      controlHalfSpeed="20"
      
      controlPerChannel0="1.0"
      controlPerChannel1="0.4"
      trimControl="0.0"
    />
  
    <Wing
      name="Right1"
      copy="Left1"
      mirror="1"
    />

    <Wing
      name="Right2"
      copy="Left2"
      mirror="1"
    />

    <Wing
      name="FinLeft"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0006"
      numSections="2"
      mass="0.0006"

      positionX="-0.26"
      positionY="0.605"
      positionZ="-0.02"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      roll="0"
      extentsX="0.1"
      extentsY="0.07"
      extentsZ="0.01"
      wingAspectRatio="0.25"
    />

    <Wing
      name="FinRight"
      copy="FinLeft"
      mirror="1"
    />

    <Fuselage
      name="Fuselage"
      mass="0.0"
      positionX="-0."
      positionY="0.0"
      positionZ="0.0"
      extentsX="0.3"
      extentsY="0.04"
      extentsZ="0.04"

      CDX="0.5"
      CDY="0.5"
      CDZ="0.5"
      render="true"
      collide="false"
    />
  </Aerodynamics>

  <Geometry>
    <!-- Additional geometry on top of the wing components etc -->

    <Shape
      type="box"
      mass="0.18"
      positionX="0.0345"
      positionY="0.0"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.025"
      extentsY="0.025"
      extentsZ="0.025"
      render="true"
      collide="true"
    />
  </Geometry>
  
</Physics>

<Graphics>
  <Model
    name="MartinWing"
    model3DS="SystemData/Aeroplanes/MartinWing/Martin.ac"
    modelScale="1.0" 
    cullBackFace="true" 
    />

  <ControlSurface
    name="AileronLeft"
    source="Left2"
    angleMultiplier="1"
    hingePoint1X="-0.619909"
    hingePoint1Y="-0.00136457"
    hingePoint1Z="0.193917"
    hingePoint2X="0.619909"
    hingePoint2Y="-0.00136457"
    hingePoint2Z="0.193917"
  />

  <ControlSurface
    name="AileronRight"
    source="Right2"
    angleMultiplier="1"
    hingePoint1X="-0.619909"
    hingePoint1Y="-0.00136457"
    hingePoint1Z="0.193917"
    hingePoint2X="0.619909"
    hingePoint2Y="-0.00136457"
    hingePoint2Z="0.193917"
  />

</Graphics>

<Audio>
  <AirFlow
    file="SystemData/Audio/Glider22050Stereo.raw"
    sampleRate="22050"
    mMinSpeedRelAir ="5"
    mFreqScalePerSpeed=".125"
    mMinFreqScale=".9"
    mMaxFreqScale="1.2"
    mVolScalePerSpeed=".05"
    mVolPow="2"
    mMaxVolume=".3"
  />

  <AirFlow
    file="SystemData/Audio/GliderWhistle22050Stereo.raw"
    sampleRate="22050"
    mMinSpeedRelAir ="15"
    mFreqScalePerSpeed=".1"
    mMinFreqScale=".9"
    mMaxFreqScale="1.2"
    mVolScalePerSpeed=".05"
    mVolPow="2"
    mMaxVolume="1"
  />
</Audio>


