<!--
Electric Kato
-->

<Misc
  launchOffsetX="2.0"
  launchOffsetY="0.5"
  launchOffsetZ="0.2"
  launchSpeed="10"
/>
<Physics>
  <Dynamics
    wingSpan="1.21"
    wingChord="0.39"
    CMRollFromY="0.0"
    friction="0.5"
    frictionScaleX="1"
    frictionScaleY="2"
    frictionScaleZ="2"
    />

  <Aerodynamics>
    <!-- Positions are in the centre of the chord and height, but at one end of the span (so extents.y may be negative). 
    Note that X is forward, Y is left and Z is up-->

    <Wing 
      name="Left1"
      aerofoil="SystemData/Aeroplanes/ElectricKato/Kato-foil-root"
      numSections="2"
      mass="0.08"

      positionX="0.01"
      positionY="0.025"
      positionZ="0.00"
      yaw="24"
      extentsX="0.29"
      extentsY="0.3"
      extentsZ="0.01"
      wingAspectRatio="5.0"
      groundEffect="1"

      CLPerDegree="0.003"
      CDPerDegree="0.000"
      CMPerDegree="-0.002"
      flapFraction="0.2"
      degreesPerControl="35"
      controlRate="10"
      controlClamp="1"
      
      controlPerChannel0="1.0"
      controlPerChannel1="0.25"
      trimControl="0.0"
    />

    <Wing 
      name="Left2"
      aerofoil="SystemData/Aeroplanes/ElectricKato/Kato-foil-tip"
      numSections="5"
      mass="0.03"

      positionX="-0.08"
      positionY="0.3"
      positionZ="0.00"
      yaw="24"
      extentsX="0.22"
      extentsY="0.33"
      extentsZ="0.01"
      wingAspectRatio="5.0"
      groundEffect="1"

      CLPerDegree="0.006"
      CDPerDegree="0.000"
      CMPerDegree="-0.002"
      flapFraction="0.3"
      degreesPerControl="35"
      controlRate="10"
      controlClamp="1"
      
      controlPerChannel0="1.0"
      controlPerChannel1="0.25"
      trimControl="-0.007"
    />
  
    <Wing
      name="Right1"
      copy="Left1"
      mirror="1"
    />

    <Wing
      name="Right2"
      copy="Left2"
      mirror="1"
    />

    <Wing
      name="FinLeft"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.001"

      positionX="-0.3"
      positionY="0.605"
      positionZ="-0.04"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      roll="0"
      extentsX="0.1"
      extentsY="0.1"
      extentsZ="0.01"
      wingAspectRatio="5"
    />

    <Wing
      name="FinRight"
      copy="FinLeft"
      mirror="1"
    />
    
    <Fuselage
      name="Fuselage"
      mass="0.0000001"
      positionX="0.0"
      positionY="0.0"
      positionZ="0.00"
      rotationY="0"
      extentsX="0.4"
      extentsY="0.06"
      extentsZ="0.06"

      CDX="1.0"
      CDY="0.5"
      CDZ="0.5"
      collide="false"
      render="true"
    />

    <PropellerEngine
      name="Engine"
      positionX="-0.124947"
      positionY="0"
      positionZ="0"
      rotationY="0"
      
      numBlades = "2"
      radius = "0.08"
      pitch = "0.18"
      bladeChord = "0.013"
      CL0 = "0.5"
      CLPerDegree = "0.1"
      CD0="0.02"
      CDInducedMultiplier="1.0"
      stallAngle="15"
      inertia = "0.000013"
      maxTorque = "0.06"
      maxRPM = "15000.0"
      minRPM = "0.0"
      frictionTorque ="0.02"
      washRotationFraction ="0.0"
      propDiskAreaScale = "0.35"

      controlExp="0.5"
      controlRate="6"
      controlPerChannel3="1"

      audioFile="SystemData/Audio/NewMotor44100Mono.raw"
      audioStereo="0"
      audioSampleRate="44100"
      audioRadius="0.2"
      audioMinVolume="0.0"
      audioMaxVolume="2"
      audioMinFreqScale="0.25"
      audioMaxFreqScale="0.6"

      colourX="0.5"
      colourY="0.5"
      colourZ="0.5"
      colourW="0.1"
    />

  </Aerodynamics>

  <Geometry>
    <!-- Additional geometry on top of the wing components etc -->

    <Shape
      type="box"
      mass="0.1"
      positionX="0.13"
      positionY="0.0"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.025"
      extentsY="0.025"
      extentsZ="0.025"
      render="true"
      collide="true"
    />

    <Shape
      type="box"
      mass="0.1"
      positionX="-0.16"
      positionY="0.0"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.025"
      extentsY="0.025"
      extentsZ="0.025"
      render="true"
      collide="false"
    />
  </Geometry>

  <CrashShapes>
    <CrashShape
      type="box"
      name="Prop"
      engineName="Engine"
      crashPropSpeed="30"
      positionX="-0.124947"
      positionY="0"
      positionZ="0"
      rotationX="45"
      extentsX="0.01"
      extentsY="0.14"
      extentsZ="0.14"
      />
  </CrashShapes>
</Physics>

<Graphics>
  <Model
    name="Kato"
    model3DS="SystemData/Aeroplanes/ElectricKato/Kato-tribal.ac"
    modelScale="1.0" 
    cullBackFace="true" 
    />

  <ControlSurface
    name="AileronLeft"
    source="Left1"
    angleMultiplier="-1"
    hingePoint1X="-0.0178754"
    hingePoint1Y="-0.00187"
    hingePoint1Z="0.100388"
    hingePoint2X="-0.600593"
    hingePoint2Y="-0.00183805"
    hingePoint2Z="0.246327"
  />

  <ControlSurface
    name="AileronRight"
    source="Right1"
    angleMultiplier="1"
    hingePoint1X="0.0178754"
    hingePoint1Y="-0.00187"
    hingePoint1Z="0.100388"
    hingePoint2X="0.600593"
    hingePoint2Y="-0.00183805"
    hingePoint2Z="0.246327"
  />

  <ControlSurface
    name="Propeller"
    source="Engine"
    hingePoint1X="0.0"
    hingePoint1Y="0.0"
    hingePoint1Z="0"
    hingePoint2X="0.0"
    hingePoint2Y="0.0"
    hingePoint2Z="1"
  />


</Graphics>

<Audio>
