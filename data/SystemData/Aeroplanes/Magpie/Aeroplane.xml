    hingePoint1Z="-0.046"
    hingePoint2X="0.426"
    hingePoint2Y="0.013"
    hingePoint2Z="-0.030"
  />

  <ControlSurface
    name="Head"
    source="Fin"
    angleMultiplier="1"
    hingePoint1X="0.0"
    hingePoint1Y="-0.024"
    hingePoint1Z="-0.129"
    hingePoint2X="0.0"
    hingePoint2Y="0.024"
    hingePoint2Z="-0.129"
  />


</Graphics>

<Audio>
  <AirFlow
    file="SystemData/Audio/Glider22050Mono.raw"
    sampleRate="22050"
    mMinSpeedRelAir ="15"
    mFreqScalePerSpeed=".125"
    mMinFreqScale=".9"
    mMaxFreqScale="1.2"
