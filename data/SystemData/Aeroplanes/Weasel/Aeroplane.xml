<!--
Weasel
-->

<Misc
  launchOffsetX="2.0"
  launchOffsetY="0.0"
  launchOffsetZ="0.2"
  launchSpeed="6.0"
/>
<Physics>
  <Dynamics
    wingSpan="0.9"
    wingChord="0.3"
    CMRollFromY="0.0"
    friction="0.5"
    frictionScaleX="1"
    frictionScaleY="2"
    frictionScaleZ="2"
    />

  <Aerodynamics>
    <!-- Positions are in the centre of the chord and height, but at one end of the span (so extents.y may be negative). 
    Note that X is forward, Y is left and Z is up-->

    <Wing
      name="Fuse"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0015"
      numSections="1"
      mass="0.001"

      positionX="-0.1"
      positionY="0.0"
      positionZ="0.06"
      roll="-90"
      extentsX="0.32"
      extentsY="0.06"
      extentsZ="0.01"
      
      wingAspectRatio="1.0"
      collide="false"
    />

    <Wing 
      name="Left"
      aerofoil="SystemData/Aerofoils/Reflex/HS130"
      numSections="5"
      mass="0.1"

      positionX="-0.07"
      positionY="0.0"
      positionZ="0.03"
      extentsX="0.26"
      extentsY="0.45"
      extentsZ="0.01"
      wingAspectRatio="3.0"
      groundEffect="1"

      CLPerDegree="0.022"
      CDPerDegree="0.005"
      CMPerDegree="-0.01"
      flapFraction="0.3"
      degreesPerControl="15"
      controlRate="15"
      
      trimControl ="0.015"
      
      controlPerChannel0="1.0"
      controlPerChannel1="0.22"
      controlDifferentialPerChannel1="0.1"
    />

    <Wing
      name="Right"
      copy="Left"
      mirror="1"
    />

    <Wing
      name="Fin"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.01"

      positionX="-0.2"
      positionY="0.0"
      positionZ="-0.01"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.14"
      extentsY="0.11"
      extentsZ="0.01"
      
      wingAspectRatio="2.0"
    />

    <Wing
      name="Tail"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0006"
      numSections="1"
      mass="0.00"

      positionX="-0.24"
      positionY="-0.05"
      positionZ="0.01"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.14"
      extentsY="0.1"
      extentsZ="0.01"
      
      wingAspectRatio="2.0"
      groundEffect="1"
      collide="false"
    />

    <Fuselage
      name="Fuselage"
      mass="0.02"
      positionX="0.0"
      positionY="0.0"
      positionZ="0.0"
      extentsX="0.35"
      extentsY="0.04"
      extentsZ="0.04"
      CDX="1.2"
      CDY="1"
      CDZ="1"
      render="true"
    />

  </Aerodynamics>

  <Geometry>
    <!-- Additional geometry on top of the wing components etc -->

    <Shape
      type="box"
      mass="0.093"
      positionX="0.125"
      positionY="0.0"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.05"
      extentsY="0.05"
      extentsZ="0.05"
      render="true"
      collide="false"
    />
  </Geometry>
  
</Physics>

<Graphics>
  <Model name="Standard" model3DS="SystemData/Aeroplanes/Weasel/Weasel.ac" modelScale="0.75" cullBackFace="true"/>

  <ControlSurface
    name="AileronLeft"
