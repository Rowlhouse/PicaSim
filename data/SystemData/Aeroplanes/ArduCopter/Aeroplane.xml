  <Model
    name="Standard"
    model3DS="SystemData/Aeroplanes/ArduCopter/ArduCopter.ac"
    modelScale="1.0"
    cullBackFace="true"
    unsetColourR="255" unsetColourG="0" unsetColourB="0"
    offsetX="0" offsetY="0.0" offsetZ="0.0"
