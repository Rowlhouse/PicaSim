<!--
Wasp - Quadcopter - motors separated by 45cm along the diagonal
-->

<Physics>
  <Dynamics
    friction="1"
    frictionScaleX="1"
    frictionScaleY="1"
    frictionScaleZ="1"
    />

  <Aerodynamics>
    <!-- Positions are in the centre of the chord and height, but at one end of the span (so extents.y may be negative). 
    Note that X is forward, Y is left and Z is up-->

    <!-- Front Left motor - CCW rotation (negative maxRPM) -->
    <PropellerEngine
      name="FL"
      positionX="0.159"
      positionY="0.159"
      positionZ="0.06"
      rotationY="-90.0"

      numBlades = "2"
      numRings = "4"
      radius = "0.11"
      pitch = "0.08"
      bladeChord = "0.01"
      CL0 = "0.5"
      CLPerDegree = "0.1"
      CD0="0.1"
      CDInducedMultiplier="2.0"
      stallAngle="15"
      inertia = "0.0005"
      maxTorque = "0.9"
      maxRPM = "-8000"
      minRPM = "0"
      frictionTorque ="0.2"
      transitionalLiftAmount="0.03"
      transitionalLiftSpeed="3.0"

      controlExp="0.525"
      controlRate="50"

      gyroName0="Pitch"
      controlPerGyro0="1"

      gyroName1="Roll"
      controlPerGyro1="-1"

      gyroName2="Yaw"
      controlPerGyro2="-1"

      gyroName3="Throttle"
      controlPerGyro3="1"

      audioFile="SystemData/Audio/Motor22050Mono.raw"
      audioSampleRate="22050"
      audioRadius="0.2"
      audioMinVolume="0"
      audioMaxVolume="1"
      audioMinFreqScale="0.2"
      audioMaxFreqScale="2"

      colourX="1.0"
      colourY="0.0"
      colourZ="0.0"
      colourW="0.1"
    />

    <!-- Front Right motor - CW rotation -->
    <PropellerEngine
      name="FR"
      copy="FL"
      positionY="-0.159"
      maxRPM="8000"
      controlPerGyro1="1"
      controlPerGyro2="1"
    />

    <!-- Back Left motor - CW rotation -->
    <PropellerEngine
      name="BL"
      copy="FL"
      positionX="-0.159"
      maxRPM="8000"
      controlPerGyro0="-1"
      controlPerGyro2="1"
      colourX="0.0"
    />

    <!-- Back Right motor - CCW rotation -->
    <PropellerEngine
      name="BR"
      copy="FL"
      positionX="-0.159"
      positionY="-0.159"
      controlPerGyro0="-1"
      controlPerGyro1="1"
      colourX="0.0"
    />

    <Fuselage
      name="Payload"
      mass="0.35"
      positionX="0.0"
      positionY="0.0"
      positionZ="0.01"
      extentsX="0.13"
      extentsY="0.13"
      extentsZ="0.08"
      CDX="1"
      CDY="1"
      CDZ="1"
      render="true"      
    />

    <Fuselage
      name="Frame1"
      mass="0.14"
      positionX="0.0"
      positionY="0.0"
      positionZ="0.0"
      yaw="45"
      extentsX="0.5"
      extentsY="0.05"
      extentsZ="0.01"
      CDX="1"
      CDY="1"
      CDZ="1"
      render="true"
    />

    <Fuselage
      name="Frame2"
      mass="0.14"
      positionX="0.0"
      positionY="0.0"
      positionZ="0.0"
      yaw="-45"
      extentsX="0.5"
      extentsY="0.05"
      extentsZ="0.01"
      CDX="1"
      CDY="1"
      CDZ="1"
      render="true"
    />

  </Aerodynamics>

  <Gyros>
    <Gyro
      name="Yaw"
      axisX="0"
      axisY="0"
      axisZ="1"
      gain="0.05"
      initialMode="axis"
      rotationRatePerChannel2="12"
    />
    <Gyro
      name="Throttle"
      axisX="0"
      axisY="0"
      axisZ="0"
      gain="1.0"
      initialMode="passThrough"
      passThroughPerChannel3="1"
      heightRatePerChannel3="10"
    />
    <Gyro
      name="Roll"
      axisX="1"
      axisY="0"
      axisZ="0"
      gain="0.1"
      channelForMode="6"
      anglePerChannel0="30"
      rotationRatePerChannel0="-6"      
      speedPerChannel0="10"
      tiltPerSpeed="10"
      maxTilt="45"
    />
    <Gyro
      name="Pitch"
      axisX="0"
      axisY="1"
      axisZ="0"
      gain="0.1"
      channelForMode="6"
      anglePerChannel1="30"
      rotationRatePerChannel1="-6"
      speedPerChannel1="10"
      tiltPerSpeed="10"
      maxTilt="45"
    />
  </Gyros>

  <Geometry>
    <!-- Additional geometry on top of the wing components etc -->
    <Shape
      type="box"
      name="FL"
