      colourBottomZ="0"
      render="true"
    />
    <Shape
      type="box"
      name="FootBL"
      mass="0.0"
      positionX="-0.12"
      positionY="0.12"
      positionZ="-0.03"
      rotationZ="-45"
      extentsX="0.08"
      extentsY="0.02"
      extentsZ="0.05"
      render="true"
    />
    <Shape
      type="box"
      name="BR"
      mass="0.09"
      positionX="-0.159"
      positionY="-0.159"
      positionZ="0.02"
      extentsX="0.02"
      extentsY="0.02"
      extentsZ="0.04"
      colourTopX="0"
      colourTopY="1"
      colourTopZ="0"
      colourSidesX="0"
      colourSidesY="1"
      colourSidesZ="0"
      colourBottomX="0"
      colourBottomY="1"
      colourBottomZ="0"
      render="true"
    />
    <Shape
      type="box"
      name="FootBR"
      mass="0.0"
      positionX="-0.12"
      positionY="-0.12"
      positionZ="-0.03"
      rotationZ="45"
      extentsX="0.08"
      extentsY="0.02"
      extentsZ="0.05"
      render="true"
    />
  </Geometry>

  <CrashShapes>
    <CrashShape
      type="box"
      name="Props"
      engineName="FL"
      crashPropSpeed="30"
      positionX="0.0"
      positionY="0.0"
      positionZ="0.06"
      rotationX="0"
      extentsX="0.53"
      extentsY="0.53"
      extentsZ="0.02"
      render="false"
      />
  </CrashShapes>

</Physics>

