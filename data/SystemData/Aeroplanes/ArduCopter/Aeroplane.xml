      positionX="0.159"
      positionY="-0.159"
      positionZ="0.02"
      extentsX="0.02"
      extentsY="0.02"
      extentsZ="0.04"
      colourTopX="1"
      colourTopY="0"
      colourTopZ="0"
      colourSidesX="1"
      colourSidesY="0"
      colourSidesZ="0"
      colourBottomX="1"
      colourBottomY="0"
      colourBottomZ="0"
      render="true"
    />
    <Shape
      type="box"
      name="FootFR"
      mass="0.0"
      positionX="0.12"
      positionY="-0.12"
      positionZ="-0.03"
      rotationZ="-45"
      extentsX="0.08"
      extentsY="0.02"
      extentsZ="0.05"
      render="true"
    />
    <Shape
      type="box"
      name="BL"
      mass="0.09"
      positionX="-0.159"
      positionY="0.159"
      positionZ="0.02"
      extentsX="0.02"
      extentsY="0.02"
      extentsZ="0.04"
      colourTopX="0"
      colourTopY="1"
      colourTopZ="0"
      colourSidesX="0"
