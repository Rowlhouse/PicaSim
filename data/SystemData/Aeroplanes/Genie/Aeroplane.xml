<!--
Genie sailplane, based on the design by Harley Michaelis
-->


<Physics>
  <Dynamics
    wingSpan="3.6"
    wingChord="0.25"
    CMRollFromY="-0.0"
    friction="0.5"
    frictionScaleX="1"
    frictionScaleY="2"
    frictionScaleZ="2"
