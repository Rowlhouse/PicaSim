      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numPieces="2"
      numSections="1"
      mass="0.013"

      positionX="-0.0"
      positionY="0.0"
      positionZ="-0.07"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.6"
      extentsY="0.08"
      extentsZ="0.05"
      wingAspectRatio="1.0"
    />

    <Wing
      name="FuseVertBack"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numPieces="3"
      numSections="1"
      mass="0.0"

      positionX="-0.6"
      positionY="0.0"
      positionZ="-0.05"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.6"
      extentsY="0.04"
      extentsZ="0.05"
      wingAspectRatio="1.0"
    />

  </Aerodynamics>

