    <Wing 
      name="Left1"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/SA7036"
      numSections="2"
      mass="0.4"

      positionX="-0.05"
      positionY="0.0"
      positionZ="0.0"
      extentsX="0.22"
      extentsY="1"
      extentsZ="0.01"
      pitch="-1"
      roll="1"      
      wingAspectRatio="20.0"
      groundEffect="1"      

      CLPerDegree="0.022"
      CDPerDegree="0.005"
      CMPerDegree="-0.02"
      flapFraction="0.1"
      degreesPerControl="50.0"

      controlPerAbsChannel3="0.8"
      controlPerChannel0="0.2"
      controlPerChannel6="0.2"
    />

    <Wing
      name="Left2"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/SA7036"
      numSections="2"
      mass="0.3"

      positionX="-0.08"
      positionY="1.0"
      positionZ="0.02"
      extentsX="0.14"
      extentsY="0.83"
      extentsZ="0.01"
      pitch="2"
      roll="4"
      wingAspectRatio="20.0"
      groundEffect="1"
      
      CLPerDegree="0.022"
      CDPerDegree="0.005"
      CMPerDegree="-0.02"
      flapFraction="0.15"
      degreesPerControl="60.0"
      
      controlPerChannel0="0.5"
      controlDifferentialPerChannel0="-0.2"
      controlPerAbsChannel3="-0.8"
      controlPerChannel6="0.2"
    />

    <Wing
      name="Right1"
      copy="Left1"
      mirror="1"
    />

    <Wing
      name="Right2"
      copy="Left2"
      mirror="1"
    />

    <Wing
      name="Tail"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.15"

      positionX="-0.95"
      positionY="-0.31"
      positionZ="0.0"
      extentsX="0.13"
      extentsY="0.62"
      extentsZ="0.01"
      pitch="-1.5"
      wingAspectRatio="5.0"
      groundEffect="1"
      
      washFromWingName1="Left1"
      washFromWingName2="Right1"
      washFromWingFraction1="0.5"
      washFromWingFraction2="0.5"
      
      CLPerDegree="0.0"
      CDPerDegree="0.0"
      CMPerDegree="0.0"
      flapFraction="1.0"
      degreesPerControl="8.0"

      controlPerChannel1="1"
      controlPerChannel3="-0.3"
      controlPerChannel6="-0.23"
    />

    <Wing
      name="Fin"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.1"

      positionX="-0.97"
      positionY="0.0"
      positionZ="-0.05"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.17"
      extentsY="0.35"
