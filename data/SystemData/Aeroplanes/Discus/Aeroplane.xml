<Misc
  launchOffsetX="3.0"
  launchOffsetY="0.0"
  launchOffsetZ="0.2"
  launchSpeed="6.0"
/>
<Physics>
  <Dynamics
    wingSpan="4.0"
    wingChord="0.4"
    CMRollFromY="0.05"
    flutterDragScale="0.0002"
    flutterDragSpeed="100"
    friction="0.5"
    frictionScaleX="1"
    frictionScaleY="2"
    frictionScaleZ="2"
    />

  <Aerodynamics>
    <!-- Positions are in the centre of the chord and height, but at one end of the span (so extents.y may be negative). 
    Note that X is forward, Y is left and Z is up-->

    <Wing
      name="FuseVertical"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numPieces="4"
      numSections="1"
      mass="0.0"

      positionX="-0.3"
      positionY="0.0"
      positionZ="-0.08"
      pitch="0"
      roll="90"
      extentsX="1.6"
      extentsY="0.07"
      extentsZ="0.01"
      wingAspectRatio="1.0"
      collide="0"
    />

    <Wing
      name="FuseHorizontal"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numPieces="4"
      numSections="1"
      mass="0.0"

      positionX="-0.3"
      positionY="-0.04"
      positionZ="-0.05"
      pitch="0"
      extentsX="1.6"
      extentsY="0.08"
      extentsZ="0.01"
      wingAspectRatio="1.0"
      collide="0"
    />



    <!--Left-->
    <Wing 
      name="Left1"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/RG15"
      numSections="3"
      mass="0.66"

      positionX="-0.04"
      positionY="0.0"
      positionZ="0.0"
      extentsX="0.22"
      extentsY="1"
      extentsZ="0.01"
      roll="3"
      wingAspectRatio="15.0"
      groundEffect="1"
      
      CLPerDegree="0.022"
      CDPerDegree="0.001"
      CMPerDegree="-0.02"
      flapFraction="0.1"
      degreesPerControl="50.0"

      controlPerAbsChannel3="0.8"
      controlPerChannel0="0.2"
      controlPerChannel6="0.2"
    />

    <Wing
      name="Left2"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/RG15"
      numSections="3"
      mass="0.43"

      positionX="-0.05"
      positionY="1.0"
      positionZ="0.06"
      extentsX="0.15"
      extentsY="0.83"
      extentsZ="0.01"
      roll="6"
      pitch="2"
      wingAspectRatio="15.0"
      groundEffect="1"
      
      CLPerDegree="0.022"
      CDPerDegree="0.001"
      CMPerDegree="-0.02"
      flapFraction="0.15"
      degreesPerControl="60.0"
      
      controlPerChannel0="0.5"
      controlDifferentialPerChannel0="-0.2"
      controlPerAbsChannel3="-0.8"
      controlPerChannel6="0.2"
    />

    <Wing
      name="Left3"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/RG15"
      numSections="1"
      mass="0.03"

      positionX="-0.05"
      positionY="1.82"
      positionZ="0.15"
      extentsX="0.1"
      extentsY="0.2"
      extentsZ="0.01"
      roll="28"
      wingAspectRatio="15.0"      
      groundEffect="1"
    />

    <!--Right-->
    <Wing
      name="Right1"
      copy="Left1"
      mirror="1"
    />

    <Wing
      name="Right2"
      copy="Left2"
      mirror="1"
    />

    <Wing
      name="Right3"
      copy="Left3"
      mirror="1"
    />


    <Wing
      name="Tail"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.1"

      positionX="-1.08"
      positionY="-0.31"
      positionZ="0.26"
      rotationX="0.0"
      rotationY="1"
      rotationZ="0.0"
      extentsX="0.1"
      extentsY="0.62"
      extentsZ="0.01"
      wingAspectRatio="6.0"
      groundEffect="1"

      CLPerDegree="0.022"
      CDPerDegree="0.005"
      CMPerDegree="-0.013"
      flapFraction="0.3"
      degreesPerControl="25"
      
      washFromWingName1="Left1"
      washFromWingName2="Right1"
      washFromWingFraction1="0.65"
      washFromWingFraction2="0.65"
      
      controlPerChannel1="1"
      controlPerChannel3="-0.15"
      controlPerChannel6="-0.15"
      controlDifferentialPerChannel1="0.2"
    />

    <Wing
      name="Fin"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.2"

      positionX="-1.07"
      positionY="0.0"
      positionZ="-0.05"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.28"
      extentsY="0.3"
      extentsZ="0.01"
      wingAspectRatio="4.0"

      CLPerDegree="0.022"
      CDPerDegree="0.001"
      CMPerDegree="-0.013"
      flapFraction="0.5"
      degreesPerControl="35.0"
      
      controlPerChannel2="-1"
    />

    <Fuselage
      name="Fuselage"
      mass="0.28"
      positionX="-0.3"
      positionY="0.0"
      positionZ="-0.07"
      rotationX="0.0"
      rotationY="0.5"
      rotationZ="0.0"
      extentsX="1.8"
      extentsY="0.05"
      extentsZ="0.05"
      CDX="0.5"
      CDY="0.5"
      CDZ="0.5"
      render="true"
    />
  </Aerodynamics>

  <Geometry>
    <!-- Additional geometry on top of the wing components etc -->

    <Shape
      type="box"
      name="cabin"
      mass="0.76"
      positionX="0.1"
      positionY="0.0"
      positionZ="-0.1"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.4"
      extentsY="0.15"
      extentsZ="0.15"
      colourTopX="0"
      colourTopY="0"
      colourTopZ="0"
      colourSidesX="0.5"
      colourSidesY="0.5"
      colourSidesZ="0.5"
      colourBottomX="1.0"
      colourBottomY="1.0"
      colourBottomZ="1.0"
      render="true"
      collide="true"
    />

    <Shape
      type="box"
      mass="0.6"
      positionX="0.45"
      positionY="0.0"
      positionZ="-0.1"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.05"
      extentsY="0.05"
      extentsZ="0.05"
      render="true"
      collide="false"
    />
  </Geometry>  
</Physics>

<Graphics>
  <Model name="Standard" model3DS="SystemData/Aeroplanes/Discus/Discus.ac" modelScale="1.0" cullBackFace="true"/>

  <ControlSurface
    name="Elevator"
    source="Tail"
    angleMultiplier="1"
    hingePoint1X="-0.311"
    hingePoint1Y="0.2585"
    hingePoint1Z="1.106"
    hingePoint2X="0.311"
    hingePoint2Y="0.2585"
    hingePoint2Z="1.106"
  />

  <ControlSurface
    name="Rudder"
    source="Fin"
    angleMultiplier="-1"
    hingePoint1X="0.0"
    hingePoint1Y="-0.072"
    hingePoint1Z="1.107"
    hingePoint2X="0.0"
    hingePoint2Y="0.259"
    hingePoint2Z="1.127"
  />

  <ControlSurface
    name="AileronLeft1"
    source="Left2"
    angleMultiplier="-1"
    hingePoint1X="-0.917"
    hingePoint1Y="0.046"
    hingePoint1Z="0.082"
    hingePoint2X="-1.611"
    hingePoint2Y="0.106"
    hingePoint2Z="0.075"
  />

  <ControlSurface
    name="FlapLeft"
    source="Left1"
    angleMultiplier="-1"
    hingePoint1X="-0.4585"
    hingePoint1Y="0.019"
    hingePoint1Z="0.092"
    hingePoint2X="-0.917"
    hingePoint2Y="0.046"
    hingePoint2Z="0.082"
  />

  <ControlSurface
    name="AileronRight1"
    source="Right2"
    angleMultiplier="1"
    hingePoint1X="0.917"
    hingePoint1Y="0.046"
    hingePoint1Z="0.082"
    hingePoint2X="1.611"
    hingePoint2Y="0.106"
    hingePoint2Z="0.075"
  />

  <ControlSurface
    name="FlapRight"
    source="Right1"
    angleMultiplier="1"
    hingePoint1X="0.4585"
    hingePoint1Y="0.019"
    hingePoint1Z="0.092"
    hingePoint2X="0.917"
    hingePoint2Y="0.046"
    hingePoint2Z="0.082"
  />


</Graphics>

<Audio>
  <AirFlow
    file="SystemData/Audio/Glider22050Stereo.raw"
    sampleRate="22050"
    mMinSpeedRelAir ="5"
    mFreqScalePerSpeed=".125"
    mMinFreqScale=".9"
