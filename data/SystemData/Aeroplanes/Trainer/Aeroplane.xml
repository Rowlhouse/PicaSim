    hingePoint1Z="1.273"
    hingePoint2X="36.131"
    hingePoint2Y="6.466"
    hingePoint2Z="0"
  />

</Graphics>

<Audio>
  <AirFlow
    file="SystemData/Audio/Glider22050Mono.raw"
    sampleRate="22050"
    mMinSpeedRelAir ="15"
    mFreqScalePerSpeed=".125"
    mMinFreqScale=".9"
