<!--
Trainer Simple rudder/elevator glider
-->

<Misc
  launchOffsetX="2.0"
  launchOffsetY="0.0"
  launchOffsetZ="0.2"
  launchSpeed="6.0"
/>
<Physics>
  <Dynamics
    wingSpan="1.5"
    wingChord="0.25"
    CMRollFromY="0.0"
    friction="0.5"
    frictionScaleX="1"
    frictionScaleY="2"
    frictionScaleZ="2"
    />

  <Aerodynamics>
    <!-- Positions are in the centre of the chord and height, but at one end of the span (so extents.y may be negative). 
    Note that X is forward, Y is left and Z is up-->

    <Wing
      name="FuselageVert"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numPieces="3"
      numSections="1"
      mass="0.0"

      positionX="-0.2"
      positionY="-0.0"
      positionZ="-0.02"
      roll="90"
      extentsX="1.0"
      extentsY="0.05"
      extentsZ="0.01"
      
      wingAspectRatio="0.5"
    />

    <Wing
      name="FuselageHor"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numPieces="3"
      numSections="1"
      mass="0.0"

      positionX="-0.2"
      positionY="-0.025"
      positionZ="-0.0"
      extentsX="1.0"
      extentsY="0.05"
      extentsZ="0.01"
      
      wingAspectRatio="0.5"
    />

    <Wing
      name="MidLeft"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/RG15"
      numSections="1"
      mass="0.075"

      positionX="0.0"
      positionY="0.0"
      positionZ="0.0"
      rotationX="3.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.24"
      extentsY="0.3"
      extentsZ="0.01"
      wingAspectRatio="8.0"
      groundEffect="1"
    />

    <Wing
      name="MidRight"
      copy="MidLeft"
      mirror="1"
    />

    <Wing 
      name="Left"
      aerofoil="SystemData/Aerofoils/SemiSymmetric/RG15"
      numSections="3"
      mass="0.15"

      positionX="0.0"
      positionY="0.3"
      positionZ="0.02"
      rotationX="13.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.24"
      extentsY="0.7"
      extentsZ="0.01"
      wingAspectRatio="8.0"
      groundEffect="1"
    />

    <Wing
      name="Right"
      copy="Left"
      mirror="1"
    />

    <Wing
      name="Tail"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.06"

      positionX="-0.75"
      positionY="-0.25"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.5"
      rotationZ="0.0"
      extentsX="0.13"
      extentsY="0.5"
      extentsZ="0.01"
      wingAspectRatio="3.0"
      groundEffect="1"
     
      washFromWingName1="Left"
      washFromWingName2="Right"
      washFromWingFraction1="0.5"
      washFromWingFraction2="0.5"

      CLPerDegree="0.022"
      CDPerDegree="0.03"
      CMPerDegree="-0.01"
      flapFraction="0.4"
      degreesPerControl="12"
      
      controlPerChannel1="1"
    />

    <Wing
      name="Fin"
      aerofoil="SystemData/Aerofoils/Symmetric/NACA0009"
      numSections="2"
      mass="0.05"

      positionX="-0.73"
      positionY="0.0"
      positionZ="0.0"
      rotationX="90.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.12"
      extentsY="0.2"
      extentsZ="0.01"
      wingAspectRatio="2.0"
      
      CLPerDegree="0.022"
      CDPerDegree="0.03"
      CMPerDegree="-0.01"
      flapFraction="0.6"
      degreesPerControl="30"
      
      controlPerChannel0="-1"
    />

    <Fuselage
      name="Fuselage"
      mass="0.0"
      positionX="-0.2"
      positionY="0.0"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="1.2"
      extentsY="0.06"
      extentsZ="0.05"
      CDX="1"
      CDY="1"
      CDZ="1"
      render="true"
    />

    <JetEngine
      name="Engine"
      positionX="0.4"
      rotationY="15.0"
      maxForce="6.0"
      maxSpeed="30.0"
      minSpeed="-1000.0"
      
      controlPerChannel3="1"

      audioFile="SystemData/Audio/Motor22050Mono.raw"
      audioSampleRate="22050"
      audioRadius="0.2"
      audioMinVolume="0"
      audioMaxVolume="1"
      audioMinFreqScale="2"
      audioMaxFreqScale="3"
    />
  </Aerodynamics>

  <Geometry>
    <!-- Additional geometry on top of the wing components etc -->
    <Shape
      type="box"
      mass="0.25"
      positionX="0.4"
      positionY="0.0"
      positionZ="0.0"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.05"
      extentsY="0.05"
      extentsZ="0.05"
      render="false"
      collide="false"
    />
    <Shape
      type="box"
      mass="0.0"
      positionX="0.3"
      positionY="0.0"
      positionZ="-0.02"
      rotationX="0.0"
      rotationY="0.0"
      rotationZ="0.0"
      extentsX="0.05"
      extentsY="0.05"
      extentsZ="0.05"
      render="true"
      collide="true"
    />
  </Geometry>
  
</Physics>

<Graphics>
  <Model name="Standard" model3DS="SystemData/Aeroplanes/Trainer/Trainer.ac" modelScale="0.0254" cullBackFace="true" unsetColourR="81" unsetColourG="81" unsetColourB="204"/>

  <ControlSurface
    name="Elevator"
    source="Tail"
    angleMultiplier="1"
    hingePoint1X="-9.843"
    hingePoint1Y="0.594"
    hingePoint1Z="29.826"
    hingePoint2X="9.843"
    hingePoint2Y="0.594"
    hingePoint2Z="29.826"
  />

  <ControlSurface
    name="Rudder"
